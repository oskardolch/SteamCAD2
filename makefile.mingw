BUILDDIR=build

SUFFIX=
PREFIX=
TOOLPFX=
CC=$(PREFIX)gcc
CP=$(PREFIX)g++
RC=$(TOOLPFX)windres
DL=$(TOOLPFX)dlltool
AR=$(TOOLPFX)ar

CAIROINC=..\Cairo\cairo-1.14.8\src
DXFINC=.\dxflib

VPATH=C:/MinGW32/Lib;./$(BUILDDIR)

CFLAGS=-c -O2 -DUNICODE -D_UNICODE -D_WIN32_WINNT=0x0501 -D_WIN32_IE=0x0600 -I$(CAIROINC)

# ole32 defines CoInitialize, CoUninitialize
# oleaut32 defines CoCreateInstance
# uuid defines GUID_NULL

# SteamCAD2

Drawobj = SteamCAD2.o MainWnd.o SteamCAD2_res.o DDataTypes.o XMLUtils.o \
	DFileSetupDlg.o DMath.o DTopo.o DDrawTypes.o DLine.o DCircle.o \
	DEllipse.o DPrimitive.o DArcElps.o DHyper.o DParabola.o DSpline.o \
	DEvolv.o DLineStyleDlg.o DDimEditDlg.o DExpCairo.o DScaleDlg.o \
	DStatDlg.o DParser.o DSnapDlg.o DExpDXF.o
#	DToolBar.o
Drawmod = $(addprefix $(BUILDDIR)/, $(Drawobj)) \
	-lgdi32 -lcomctl32 -lole32 -loleaut32 -luuid -lgdiplus -lcairo.dll -ldxflib

SteamCAD2 : $(Drawobj)
	$(CP) -s -L./$(BUILDDIR) -o $(BUILDDIR)/SteamCAD2.exe $(Drawmod) \
	-static-libgcc -static-libstdc++ -mwindows

# dxflib

dxflibobj = dl_dxf.o dl_writer_ascii.o
dxflibmod = $(addprefix $(BUILDDIR)/, $(dxflibobj))

libdxflib.a: $(dxflibobj)
	@$(AR) $(ARFLAGS) $(BUILDDIR)/$@ $(dxflibmod)

# Template command for compiling dxflib
%.o : dxflib/%.cpp
	$(CC) $(CFLAGS) $< -o $(BUILDDIR)/$@

# dxflib sources
dl_dxf.o : dxflib/dl_dxf.cpp dxflib/dl_dxf.h
dl_writer_ascii.o : dxflib/dl_writer_ascii.cpp dxflib/dl_writer_ascii.h


# Template command for compiling .cpp to .o
%.o : Source/%.cpp
	$(CC) $(CFLAGS) $< -o $(BUILDDIR)/$@

